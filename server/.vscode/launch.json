{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Server",
            "runtimeExecutable": "npx",
            "runtimeArgs": [
                "tsx",
                "--inspect",
                "./sources/main.ts"
            ],
            "env": {
                "NODE_ENV": "development"
            },
            "envFile": "${workspaceFolder}/.env.local",
            "cwd": "${workspaceFolder}",
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ]
        }
    ]
}